{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/jakesower/data-prism/main/schemas/data-prism-schema.1.0.schema.json",
  "title": "Data Prism Schema",
  "description": "A metaschema for Data Prism schemas.",
  "type": "object",
  "required": [
    "resources"
  ],
  "properties": {
    "$id": {
      "type": "string"
    },
    "$comment": {
      "type": "string"
    },
    "$schema": {
      "type": "string"
    },
    "meta": true,
    "version": {
      "type": "string"
    },
    "resources": {
      "type": "object",
      "minProperties": 1,
      "patternProperties": {
        "[^.$]": {
          "type": "object",
          "required": ["properties", "relationships"],
          "properties": {
            "$ref": {
              "type": "string"
            },
            "plural": {
              "type": "string"
            },
            "singular": {
              "type": "string"
            },
            "properties": {
              "type": "object",
              "patternProperties": {
                "[^.$]": {
                  "$ref": "#/definitions/resourceProperty"
                }
              }
            },
            "relationships": {
              "type": "object",
              "patternProperties": {
                "[^.$]": {
                  "$ref": "#/definitions/resourceRelationship"
                }
              }
            }
          }
        }
      }
    },
    "$defs": {
      "type": "object"
    }
  },
  "definitions": {
    "simpleTypes": {
      "enum": [
        "array",
        "boolean",
        "integer",
        "null",
        "number",
        "object",
        "string"
      ]
    },
    "nestedProperty": {
      "type": "object",
      "properties": {
        "type": {
          "$ref": "#/definitions/simpleTypes"
        },
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "default": true,
        "$comment": {
          "type": "string"
        },
        "deprecated": {
          "type": "boolean",
          "default": false
        },
        "oneOf": {
          "$ref": "#/definitions/resourcePropertyArray"
        },
        "enum": {
          "type": "array",
          "minItems": 1
        },
        "const": true,
        "$ref": {
          "type": "string"
        },
        "meta": true
      }
    },
    "resourceProperty": {
      "type": "object",
      "required": [
        "type"
      ],
      "properties": {
        "type": {
          "$ref": "#/definitions/simpleTypes"
        },
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "default": true,
        "$comment": {
          "type": "string"
        },
        "deprecated": {
          "type": "boolean",
          "default": false
        },
        "oneOf": {
          "$ref": "#/definitions/resourcePropertyArray"
        },
        "enum": {
          "type": "array",
          "minItems": 1
        },
        "const": true,
        "$ref": {
          "type": "string"
        },
        "meta": true
      }
    },
    "resourceRelationship": {
      "type": "object",
      "required": [
        "resource",
        "cardinality"
      ],
      "properties": {
        "resource": {
          "type": "string"
        },
        "cardinality": {
          "type": "string",
          "enum": [
            "one",
            "many"
          ]
        },
        "inverseProperty": {
          "type": "string"
        }
      }
    },
    "resourcePropertyArray": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/nestedProperty"
      }
    }
  }
}