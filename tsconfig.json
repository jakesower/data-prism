{
	"compilerOptions": {
		"composite": true,
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"lib": [
			"ES2022"
		],
		"isolatedModules": true,
		"resolveJsonModule": true,
		"declaration": true,
		"declarationMap": true,
		"incremental": true,
		"skipLibCheck": true, // TODO: pull this out once lodash works
		"paths": {
			"data-prism": [
				"./packages/data-prism"
			],
			"@data-prism/expressions": [
				"./packages/expressions"
			],
			"@data-prism/jsonapi-store": [
				"./packages/jsonapi-store"
			],
			"@data-prism/memory-store": [
				"./packages/memory-store"
			],
			"@data-prism/postgres-store": [
				"./packages/postgres-store"
			],
			"@data-prism/sqlite-store": [
				"./packages/sqlite-store"
			],
			"@data-prism/core": [
				"./packages/core"
			],
			"@data-prism/utils": [
				"./packages/utils"
			],
		}
	},
	"references": [
		{
			"path": "./packages/expressions"
		},
		{
			"path": "./packages/core"
		},
		{
			"path": "./packages/utils"
		}
	]
}