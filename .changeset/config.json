{
	"$schema": "https://unpkg.com/@changesets/config/schema.json",
	"changelog": false,
	"commit": false,
	"linked": [],
	"access": "restricted",
	"baseBranch": "main",
	"updateInternalDependencies": "patch",
	"ignore": [
		"@data-prism/postgres-store",
		"@data-prism/jsonapi-store",
		"@data-prism/jsonapi-server"
	],
	"bumpVersions": [
		{
			"package": "*",
			"bumpRule": {
				"major": {
					"0.*.*": "minor",
					"*": "major"
				},
				"minor": "minor",
				"patch": "patch",
				"none": "none"
			}
		}
	]
}
